<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:shadow="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/tools"
    android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="50dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="350dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_margin="5dp"
                    android:padding="7dp"
                    app:cardElevation="6dp"
                    app:cardCornerRadius="6dp"
                    android:background="@drawable/rounded_corner_5dp"
                    android:layout_height="match_parent">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="225dp" />


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="0dp"
                    android:elevation="3dp">


                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="210dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="50dp"
                        android:layout_marginRight="10dp"
                        android:elevation="5dp">

                        <com.dd.ShadowLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#FFFFFF"
                            shadow:sl_cornerRadius="10dp"
                            shadow:sl_dx="2dp"
                            shadow:sl_dy="2dp"
                            shadow:sl_shadowColor="#11e1e2e4">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/rounded_corner_5dp"
                                android:orientation="vertical">


                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="30dp"
                                    android:orientation="vertical">

                                    <customfonts.MyTextView_Poppins_Bold
                                        android:textStyle="bold"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_horizontal"
                                        android:layout_marginTop="30dp"
                                        android:id="@+id/user_email"
                                        android:text="Email"
                                        android:textColor="#4f4f4f"
                                        android:textSize="22sp" />

                                    <customfonts.MyTextView_Poppins_Regular
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="14dp"
                                        android:text="Uid"
                                        android:id="@+id/user_uid"
                                        android:textColor="@color/colortext"
                                        android:textSize="18sp" />

                                </LinearLayout>


                            </LinearLayout>

                        </com.dd.ShadowLayout>

                    </FrameLayout>


                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:id="@+id/img_usr"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/circle"
                        android:elevation="5dp"
                        android:src="@drawable/profile2" />

                </FrameLayout>

                </androidx.cardview.widget.CardView>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_margin="2dp"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_margin="5dp"
                    android:padding="7dp"
                    app:cardElevation="6dp"
                    app:cardCornerRadius="6dp"
                    android:background="@drawable/rounded_corner_5dp"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical" >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_gravity="start"
                    android:layout_marginTop="5dp"
                    android:background="#000000"/>


                    <com.scottyab.showhidepasswordedittext.ShowHidePasswordEditText
                        app:tint_color="#FFFFFF"
                        android:layout_marginTop="20dp"
                        android:id="@+id/edt_chg_password"
                        android:inputType="textPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:hint="Enter new password here"
                        android:textSize="13sp"
                        android:textColorHint="@color/colortext"
                        android:maxLength="10"
                        app:drawable_hide="@drawable/hide1"
                        app:drawable_show="@drawable/show"
                        android:textCursorDrawable="@drawable/white_cursor_color"
                        android:maxLines="1"
                        android:textColor="@color/colortext"
                        android:background="@android:color/transparent"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_gravity="start"
                        android:layout_marginTop="3dp"
                        android:background="#000000"/>

                    <customfonts.MyTextView_Poppins_Regular
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginLeft="100dp"
                        android:background="@drawable/white_cursor_color"
                        android:layout_marginRight="100dp"
                        android:id="@+id/chg_pass"
                        android:layout_height="wrap_content"
                        android:text="Change Password"
                        android:padding="12dp">

                    </customfonts.MyTextView_Poppins_Regular>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_gravity="start"
                    android:padding="10dp"
                    android:layout_marginTop="3dp"
                    android:background="#000000"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_margin="5dp"
                    android:padding="7dp"
                    app:cardElevation="6dp"
                    app:cardCornerRadius="6dp"
                    android:background="@drawable/rounded_corner_5dp"
                    android:layout_height="match_parent">

                    <customfonts.MyTextView_Poppins_Bold
                        android:layout_width="match_parent"
                        android:padding="10dp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:background="@drawable/white_cursor_color"
                        android:id="@+id/delete_acc"
                        android:layout_height="wrap_content"
                        android:text="Delete Account">

                    </customfonts.MyTextView_Poppins_Bold>


                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </LinearLayout>

</LinearLayout>